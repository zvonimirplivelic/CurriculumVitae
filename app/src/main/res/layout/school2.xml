<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvEducationDuration2"
        style="@style/TextViewDuration"
        android:text="@string/education2_duration"
        app:layout_constraintBottom_toBottomOf="@id/tvEducationName2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvEducationName2"
        app:layout_constraintTop_toTopOf="@id/tvEducationName2" />

    <TextView
        android:id="@+id/tvEducationName2"
        style="@style/CardViewName"
        android:text="@string/education2_name"
        app:layout_constraintBottom_toTopOf="@id/tvDescriptionEducation2"
        app:layout_constraintLeft_toRightOf="@id/tvEducationDuration2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDescriptionEducation2"
        style="@style/CardViewDescription"
        android:text="@string/education2_description"
        app:layout_constraintBottom_toTopOf="@id/tvSkillsEducation2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEducationDuration2" />

    <TextView
        android:id="@+id/tvSkillsEducation2"
        style="@style/CardViewDetails"
        android:text="@string/education2_skills"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDescriptionEducation2" />

</androidx.constraintlayout.widget.ConstraintLayout>
