<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvDurationJob1"
        style="@style/TextViewDuration"
        android:text="November 2019 - Present"
        app:layout_constraintBottom_toBottomOf="@id/tvJobName1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvJobName1"
        app:layout_constraintTop_toTopOf="@id/tvJobName1" />

    <TextView
        android:id="@+id/tvJobName1"
        style="@style/CardViewName"
        android:text="Noky Security"
        app:layout_constraintLeft_toRightOf="@id/tvDurationJob1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDescriptionEducation1"
        style="@style/CardViewDescription"
        android:text="Security center dispatcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDurationJob1" />

    <TextView
        android:id="@+id/tvSkillsEducation1"
        style="@style/CardViewDetails"
        android:text="Responsibilities:\n • Maintenance of documentation\n • Interaction with clients and technicians\n • Dispatching intervening teams\n • Dispatching emergency services\n • Tracking alarm systems and video surveillance\n • Maintenace of alarm systems"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDescriptionEducation1" />

</androidx.constraintlayout.widget.ConstraintLayout>
