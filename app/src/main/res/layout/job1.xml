<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvJobDuration1"
        style="@style/TextViewDuration"
        android:text="@string/job1_duration"
        app:layout_constraintBottom_toBottomOf="@id/tvJobName1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvJobName1"
        app:layout_constraintTop_toTopOf="@id/tvJobName1" />

    <TextView
        android:id="@+id/tvJobName1"
        style="@style/CardViewName"
        android:text="@string/job1_name"
        app:layout_constraintLeft_toRightOf="@id/tvJobDuration1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvJobDescription1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvJobDescription1"
        style="@style/CardViewDescription"
        android:text="@string/job1_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvJobResponsibilities1"
        app:layout_constraintTop_toBottomOf="@id/tvJobDuration1" />

    <TextView
        android:id="@+id/tvJobResponsibilities1"
        style="@style/CardViewDetails"
        android:text="@string/job1_responsibilities"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvJobDescription1" />

</androidx.constraintlayout.widget.ConstraintLayout>
